<div class="container">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-lg-2 col-md-6 mb-4">
        <%= link_to product, class: "card" do %>
          <div class="card-body">
            <p class="card-text"><%= product.name %></p>
          </div>
          <div class="card-footer text-muted">
            <p class="card-text">Price: <%= product.price %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

